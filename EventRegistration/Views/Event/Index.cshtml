@model IEnumerable<Registration>

@{
    ViewData["Title"] = "Index";
}

<div class="center-block">
    <div class="row box user-list">
        <div class="row">
            <a asp-action="Add" class="btn btn-default float-right btn-custom">+ Add User</a>
        </div>
        <h2>List of registered users</h2>
        <div class="row">
            @if (Model?.Count() > 0)
            {
                <table class="table table-bordered table-custom">
                    <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Id)</th>
                        <th> @Html.DisplayNameFor(model => model.User.Name)</th>
                        <th> @Html.DisplayNameFor(model => model.User.EmailId)</th>
                        <th> @Html.DisplayNameFor(model => model.User.Gender)</th>
                        <th> @Html.DisplayNameFor(model => model.DateRegistered)</th>
                        <th> @Html.DisplayNameFor(model => model.RegistrationDay)</th>
                        <th> @Html.DisplayNameFor(model => model.AdditionalRequest)</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.EmailId)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.Gender.Value)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateRegistered)</td>
                            <td>@Html.DisplayFor(modelItem => item.RegistrationDay)</td>
                            <td>@Html.DisplayFor(modelItem => item.AdditionalRequest)</td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <h5>Nobody registered yet, Please click add button to add users </h5>
            }
        </div>
        <a asp-controller="Home" asp-action="Index"  class="btn btn-default float-right btn-custom">Api table</a>
    </div>
</div>